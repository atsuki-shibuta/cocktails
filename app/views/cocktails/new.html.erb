<%= form_with(model: @cocktail, local: true) do |f| %>
	<%= render 'layouts/error_messages', model: f.object %>
	
	<div class="form-group">
  	<%= f.label :name, 'Name' %>
  	<%= f.text_field :name, class: 'form-control' %>
	</div>
  <div class="form-group">
  	<%= f.label :content, 'Content' %>
    <%= f.text_area :content, class: 'form-control', rows: 2 %>
  </div>
	<div class="form-group">
  	<%= f.label :ingredient, 'Ingredient' %>
  	<%= f.text_area :ingredient, class: 'form-control', rows: 5 %>
	</div>
	<div class="form-group">
  	<%= f.label :recipe, 'Recipe' %>
  	<%= f.text_area :recipe, class: 'form-control', rows: 5 %>
	</div>
  <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
<% end %>